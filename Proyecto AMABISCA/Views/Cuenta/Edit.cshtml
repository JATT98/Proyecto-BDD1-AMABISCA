@model Proyecto_AMABISCA.Models.UT_CUENTA

@{
    ViewBag.Title = "Edit";
}

<style>
    .title {
        margin-top: 50px;
    }

    .form-register {
        width: 600px;
    }
</style>

<div class="container title logo">
    <h2>EDITAR</h2>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container form-register">
        <h4>PROVEEDOR</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PC_CUENTA)

        <div class="form-group">
            <label class="control-label col-md-4">USUARIO</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">CLAVE</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.CLAVE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CLAVE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">ROL</label>
            <div class="col-md-12">
                @Html.DropDownList("RC_ROL", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RC_ROL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12 justify-content-around d-flex">
                <input type="submit" value="GUARDAR" class="btn btn-primary col-5" />
                <a type="btn" href="@Url.Action("Index")" class="btn btn-secondary col-5">REGRESAR</a>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
