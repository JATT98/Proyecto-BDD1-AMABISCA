@model Proyecto_AMABISCA.Models.AT_PROVEEDOR

@{
    ViewBag.Title = "Delete";
}

<style>
    .title {
        margin-top: 50px;
    }
    .card {
        margin-bottom: 0.75rem;
    }
    .form-register {
        width: 600px;
    }
</style>

<div class="container title logo">
    <h3>¿Estás seguro de querer eliminar este registro?</h3>

</div>
<div class="container" >
    <div class="row justify-content-around">

            <div class="col-7">
                <div class="card animated bounceInUp" style="width: 32rem;">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(model => model.RAZON_SOCIAL)</h4>
                        <p class="card-text font-weight-bold" style:"bold">Dirección:</p>
                        <p class="card-text">@Html.DisplayFor(model => model.DIRECCION)</p>
                        <p class="card-text font-weight-bold" style:"bold">Contacto:</p>
                        <p class="card-text">@Html.DisplayFor(model => model.TELEFONO)</p>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-footer d-flex">

                            <a type="btn" class="btn btn-secondary mx-auto" href="@Url.Action("Index")">REGRESAR</a>
                            <input type="submit" value="ELIMINAR" class="btn btn-danger mx-auto" />
                        </div>
                    }
                    

                </div>
            </div>

    </div>

</div>