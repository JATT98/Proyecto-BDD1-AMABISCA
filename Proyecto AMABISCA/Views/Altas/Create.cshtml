@model Proyecto_AMABISCA.Models.AT_DESCRIPCION

@{
    ViewBag.Title = "Create";
}
<style>
    .title {
        margin-top: 50px;
    }

    .form-register {
        width: 600px;
    }
</style>

<div class="container title logo">
    <h2>REGISTRO DE ALTA</h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-register container">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-10">PRODUCTO</label>
        <div class="col-md-12">
            @Html.DropDownList("RC_PRODUCTO", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RC_PRODUCTO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-10">PROVEEDOR</label>
        <div class="col-md-12">
            @Html.DropDownList("RC_PROVEEDOR", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RC_PROVEEDOR, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-10">CANTIDAD</label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.CANTIDAD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CANTIDAD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-10">COSTO</label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.PRECIO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PRECIO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-10">FECHA</label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.F_CREACION, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.F_CREACION, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-12 justify-content-around d-flex">
            <input type="submit" value="CREAR" class="btn btn-primary col-5" />
            <a type="btn" href="@Url.Action("Index")" class="btn btn-secondary col-5">REGRESAR</a>

        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
